<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (guests.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Dietary Restrictions</th>
                        <th scope="col">Overnight Accomodations</th>
                        <th scope="col">Username</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% guests.forEach((guest, index) => { %>
                        <tr>
                            <th scope="row"><%= guest.id %></th>
                            <td><img src="/assets/img/<%= guest.image %>" class="rounded-circle player-img" alt=""></td>
                            <td><%= guest.first_name %></td>
                            <td><%= guest.last_name %></td>
                            <td><%= guest.overnight_accomodations %></td>
                            <td><%= guest.dietary_restrictions %></td>
                            <td>@<%= guest.user_name %></td>
                            <td>
                                <a href="/edit/<%= guest.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= guest.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No guests found. Go <a href="/add" >here</a> to add guests.</p>
        <% } %>
    </div>
</div>
</body>
</html>